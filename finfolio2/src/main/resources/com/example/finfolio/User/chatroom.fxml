<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="400.0"  stylesheets="@../../../../Styles/chat.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finfolio.Credits.Chatroom">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="272.0" prefWidth="372.0">
            <children>
                <TextArea fx:id="messageArea" prefHeight="200.0" prefWidth="372.0" styleClass="message-area" wrapText="true" />
                <HBox prefHeight="50.0" prefWidth="372.0">
                    <children>
                        <TextField fx:id="messageInput" prefHeight="23.0" prefWidth="298.0" styleClass="message-input" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" style="-fx-background-radius: 10;" styleClass="send-button" text="Send" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
