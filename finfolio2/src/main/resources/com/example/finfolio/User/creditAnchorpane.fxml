<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.Rating?>

<AnchorPane prefHeight="128.0" prefWidth="337.0" style="-fx-background-color: white; -fx-background-radius: 10" styleClass="credits_container" stylesheets="" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finfolio.Credits.CreditAnchorpane">

    <!-- Name Label -->
    <Label fx:id="nameLabel" layoutX="103.0" layoutY="14.0" prefHeight="27.0" prefWidth="183.0" styleClass="credit-name-label" text="Name: Dali">
        <font>
            <Font name="Cambria Bold Italic" size="18.0" />
        </font>
    </Label>

    <!-- Credit Details -->
    <VBox layoutX="11.0" layoutY="14.0" prefHeight="160.0" prefWidth="183.0" spacing="1">
        <Label fx:id="idLabeluser" styleClass="credit-details-label" text="ID: " textFill="WHITE" visible="false" />
        <Label fx:id="idLabel" styleClass="credit-details-label" text="ID: " textFill="WHITE" visible="false" />
        <Label fx:id="montantLabel" styleClass="credit-details-label" text="Montant: $ ">
            <font>
                <Font name="Cambria Bold Italic" size="12.0" />
            </font>
        </Label>
        <Label fx:id="interetMaxLabel" styleClass="credit-details-label" text="Intérêt Max: ">
            <font>
                <Font name="Cambria Bold Italic" size="12.0" />
            </font>
        </Label>
        <Label fx:id="interetMinLabel" styleClass="credit-details-label" text="Intérêt Min: ">
            <font>
                <Font name="Cambria Bold Italic" size="12.0" />
            </font>
        </Label>
        <Label fx:id="dateDebutLabel" styleClass="credit-details-label" text="Date Début: ">
            <font>
                <Font name="Cambria Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="dateFinLabel" styleClass="credit-details-label" text="Date Fin: ">
            <font>
                <Font name="Cambria Bold" size="12.0" />
            </font>
        </Label>
    </VBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" layoutX="136.0" layoutY="131.0" prefHeight="35.0" prefWidth="217.0" spacing="10">
        <Button fx:id="sendButton" contentDisplay="CENTER" onAction="#handleSendButton" prefHeight="20.0" prefWidth="53.0" style="-fx-background-radius: 10;" styleClass="credit-button" text="envoyer">
            <font>
                <Font name="Cambria Bold" size="10.0" />
            </font>
        </Button>
        <Button fx:id="pdfbutton" mnemonicParsing="false" onAction="#generatepdfclick" prefHeight="20.0" prefWidth="61.0" style="-fx-background-radius: 10;" text="Imprimer">
            <font>
                <Font name="Cambria Bold" size="10.0" />
            </font>
        </Button>
        <Button fx:id="contactButton" onAction="#contacterbutton" prefHeight="20.0" prefWidth="61.0" style="-fx-background-radius: 10;" styleClass="credit-button" text="contacter">
            <font>
                <Font name="Cambria Bold Italic" size="10.0" />
            </font>
        </Button>
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
    </HBox>
   <HBox layoutX="154.0" layoutY="76.0" prefHeight="35.0" prefWidth="200.0">
      <children>
         <Rating fx:id="rating" prefHeight="64.0" prefWidth="176.0"  />
      </children>
   </HBox>
</AnchorPane>
