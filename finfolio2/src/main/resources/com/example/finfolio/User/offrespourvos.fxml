<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finfolio.Credits.Offrespourvos">
    <!-- TableView for Offres Pour Vous -->
    <TableView fx:id="offresTable" layoutX="26.0" layoutY="70.0" prefHeight="200.0" prefWidth="548.0" style="-fx-background-radius: 10;">
        <columns>
            <TableColumn fx:id="idOfferColumn" prefWidth="75.0" text="ID Offre" visible="false" />
            <TableColumn fx:id="montantColumn" prefWidth="100.0" text="Montant" />
            <TableColumn fx:id="interetColumn" prefWidth="100.0" text="Interet" />
            <TableColumn fx:id="userIdColumn" prefWidth="100.0" text="User ID" visible="false" />
            <TableColumn fx:id="creditIdColumn" prefWidth="100.0" text="Credit ID" visible="false" />
            <TableColumn fx:id="userNameColumn" prefWidth="100.0" text="Nom Utilisateur" visible="true" />
        </columns>
    </TableView>

    <!-- Accept Button -->
    <Button fx:id="acceptButton" layoutX="180.0" layoutY="283.0" mnemonicParsing="false" onAction="#acceptOffre" style="-fx-background-radius: 10; -fx-background-color: #008000;" text="Accepter" textFill="WHITE">
        <font>
            <Font name="Cambria Bold" size="12.0" />
        </font>
    </Button>

    <!-- Delete Button -->
    <Button fx:id="deleteButton" layoutX="333.0" layoutY="283.0" mnemonicParsing="false" onAction="#deleteOffre" style="-fx-background-radius: 10; -fx-background-color: #FF0000;" text="Supprimer" textFill="WHITE">
        <font>
            <Font name="Cambria Bold" size="12.0" />
        </font>
    </Button>
   <Label layoutX="205.0" layoutY="26.0" prefHeight="22.0" prefWidth="190.0" style="-fx-background-color: #00008b; -fx-background-radius: 10;" text="Offres envoyées à vous" textFill="#fffcfc">
      <font>
         <Font name="Cambria Bold Italic" size="18.0" />
      </font>
   </Label>
</AnchorPane>
