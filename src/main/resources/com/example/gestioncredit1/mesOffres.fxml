<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestioncredit1.MesOffresController">

    <!-- TableView for Offres -->
    <TableView fx:id="tableau_Offre" layoutX="26.0" layoutY="59.0" prefHeight="200.0" prefWidth="548.0" style="-fx-background-radius: 10;">
        <columns>
            <TableColumn fx:id="id_offre" prefWidth="75.0" text="ID Offre" visible="false" />
            <TableColumn fx:id="montant_offre" prefWidth="100.0" text="Montant" />
            <TableColumn fx:id="intret_offre" prefWidth="100.0" text="Interet" />
            <TableColumn fx:id="user_id_offre" prefWidth="100.0" text="User ID" visible="false" />
            <TableColumn fx:id="credit_id_offre1" prefWidth="100.0" text="Credit ID" visible="false" />
            <TableColumn fx:id="user_name_offre" prefWidth="100.0" text="name " visible="false" />
        </columns>
    </TableView>

    <!-- Input fields for montant and intret -->
    <Label layoutX="151.0" layoutY="291.0" text="Montant:" />
    <TextField fx:id="montantInput" layoutX="100.0" layoutY="317.0" onKeyTyped="#montantinput" style="-fx-background-radius: 10;" />
    <Label fx:id="montantErrorMessageLabel" layoutX="76.0" layoutY="351.0" textFill="RED" />

    <Label layoutX="395.0" layoutY="291.0" text="Interet:" />
    <TextField fx:id="interetInput" layoutX="351.0" layoutY="317.0" onKeyTyped="#intretinput" style="-fx-background-radius: 10;" />
    <Label fx:id="interetErrorMessageLabel" layoutX="348.0" layoutY="351.0" textFill="RED" />

    <!-- Delete Button -->
    <Button fx:id="delete_offre" layoutX="247.0" layoutY="273.0" mnemonicParsing="false" onAction="#delete_offre" style="-fx-background-radius: 10; -fx-background-color: #00008b;" text="supprimer offre" textFill="WHITE">
        <font>
            <Font name="Cambria Bold" size="12.0" />
        </font>
    </Button>
    <Button fx:id="Update_offre" layoutX="254.0" layoutY="357.0" mnemonicParsing="false" onAction="#Update_offre" style="-fx-background-radius: 10; -fx-background-color: #00008b;" text="modifier offre" textFill="WHITE">
        <font>
            <Font name="Cambria Bold Italic" size="12.0" />
        </font>
    </Button>
    <TextField fx:id="my_id_offre" layoutX="76.0" layoutY="351.0" visible="false" />
    <TextField fx:id="myuser_id" layoutX="395.0" layoutY="351.0" visible="false" />
    <TextField fx:id="my_icreditid" layoutX="436.0" layoutY="259.0" visible="false" />
</AnchorPane>
