<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestioncredit1.Chatroom">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" prefHeight="272.0" prefWidth="372.0">
            <children>
                <TextArea fx:id="messageArea" prefHeight="200.0" prefWidth="372.0" wrapText="true" />
                <HBox prefHeight="50.0" prefWidth="372.0">
                    <children>
                        <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" prefWidth="300.0" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>