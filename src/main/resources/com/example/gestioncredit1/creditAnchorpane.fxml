<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorpane_credit" prefHeight="150.0" prefWidth="300.0" styleClass="credit-anchorpane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestioncredit1.CreditAnchorpane">
    <children>
        <!-- Name Label -->
        <Label fx:id="nameLabel" layoutX="14.0" layoutY="14.0" prefHeight="27.0" prefWidth="272.0" styleClass="credit-name-label" text="Name: Dali">
            <font>
                <Font name="Cambria Bold Italic" size="18.0" />
            </font>
        </Label>

        <!-- Credit Details -->
        <VBox layoutX="14.0" layoutY="50.0" prefHeight="96.0" prefWidth="272.0" spacing="5">
            <Label fx:id="idLabel" styleClass="credit-details-label" text="ID: " textFill="#f4f4f4" />
            <Label fx:id="montantLabel" styleClass="credit-details-label" text="Montant: " />
            <Label fx:id="interetMaxLabel" styleClass="credit-details-label" text="Intérêt Max: " />
            <Label fx:id="interetMinLabel" styleClass="credit-details-label" text="Intérêt Min: " />
            <Label fx:id="dateDebutLabel" styleClass="credit-details-label" text="Date Début: " />
            <Label fx:id="dateFinLabel" styleClass="credit-details-label" text="Date Fin: " />
        </VBox>

        <!-- Buttons -->
        <HBox layoutX="180.0" layoutY="15.0" spacing="10">
            <Button fx:id="contactButton" styleClass="credit-button" text="Contact" />
            <Button fx:id="sendButton" onAction="#handleSendButton" styleClass="credit-button" text="Send" />
        </HBox>
    </children>
</AnchorPane>
