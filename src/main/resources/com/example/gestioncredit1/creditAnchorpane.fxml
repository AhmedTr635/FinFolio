<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorpane_credit" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: white; -fx-background-radius: 10;" styleClass="credit-anchorpane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestioncredit1.CreditAnchorpane">
    <children>
        <!-- Name Label -->
        <Label fx:id="nameLabel" layoutX="103.0" layoutY="14.0" prefHeight="27.0" prefWidth="183.0" styleClass="credit-name-label" text="Name: Dali">
            <font>
                <Font name="Cambria Bold Italic" size="18.0" />
            </font>
        </Label>

        <!-- Credit Details -->
        <VBox layoutX="14.0" layoutY="27.0" prefHeight="167.0" prefWidth="146.0" spacing="5">
            <Label fx:id="idLabeluser" styleClass="credit-details-label" text="ID: " textFill="WHITE" />
            <Label fx:id="idLabel" styleClass="credit-details-label" text="ID: " textFill="WHITE" />
            <Label fx:id="montantLabel" styleClass="credit-details-label" text="Montant: $ ">
            <font>
               <Font name="Cambria Bold Italic" size="12.0" />
            </font></Label>
            <Label fx:id="interetMaxLabel" styleClass="credit-details-label" text="Intérêt Max: ">
            <font>
               <Font name="Cambria Bold Italic" size="12.0" />
            </font></Label>
            <Label fx:id="interetMinLabel" styleClass="credit-details-label" text="Intérêt Min: ">
            <font>
               <Font name="Cambria Bold Italic" size="12.0" />
            </font></Label>
            <Label fx:id="dateDebutLabel" styleClass="credit-details-label" text="Date Début: ">
            <font>
               <Font name="Cambria Bold" size="12.0" />
            </font></Label>
            <Label fx:id="dateFinLabel" styleClass="credit-details-label" text="Date Fin: ">
            <font>
               <Font name="Cambria Bold" size="12.0" />
            </font></Label>
        </VBox>

           <!-- Buttons -->
        <HBox layoutX="160.0" layoutY="99.0" spacing="10">
            <Button fx:id="contactButton" style="-fx-background-radius: 10;" styleClass="credit-button" text="Contact">
            <font>
               <Font name="Cambria Bold Italic" size="12.0" />
            </font>
         </Button>
            <Button fx:id="sendButton" onAction="#handleSendButton" style="-fx-background-radius: 10;" styleClass="credit-button" text="Send">
            <font>
               <Font name="Cambria Bold" size="12.0" />
            </font>
         </Button>
        </HBox>
      <Button fx:id="pdfbutton" layoutX="202.0" layoutY="147.0" mnemonicParsing="false" onAction="#generatepdfclick" style="-fx-background-radius: 10;" text="PDF">
         <font>
            <Font name="Cambria Bold" size="12.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
